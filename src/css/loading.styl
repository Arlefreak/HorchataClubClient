.signal-parent
    display block
    height 100px
    width 100px
    margin 10px auto 10px auto
    padding 2.5%
    box-sizing border-box

.signal
    border 5px solid $color2
    border-radius 50%
    margin auto
    height 90%
    width 90%
    opacity 1
    box-sizing border-box
    animation pulsate 1s ease-out
    animation-iteration-count infinite

@keyframes pulsate
    0% {
      transform: scale(.1);
      opacity: 0.0;
    }
    50% {
      opacity: 1;
    }
    100% {
      transform: scale(1.2);
      opacity: 0;
    }
