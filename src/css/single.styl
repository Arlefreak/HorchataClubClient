.single
    width 100%
    max-width 800px
    display block
    margin 0 auto 20px auto
    text-align center
    box-sizing border-box
    .horchata__img
        width 100%
        height auto
        display block
        /* padding 0 0 100% 0 */
        border-radius 10px 0 0 0
        background-size cover
        background-position center center
        background-repeat no-repeat
        /* background-attachment fixed */
    .horchata__map
        width 100%
        height 50vh
        display block
        margin 0px auto 0 auto
        border-radius 0px 0 10px 0
        iframe
            width 100%
            height 100%
            display block
    .horchata__body
        margin 40px auto 40px auto
        width 80%
        .grade
        .address
            display block
            width 100%
            text-align left
        .address
            padding 10px 0 0 0
            border-top 1px solid $color2
        .grade
            img
                width 1.5em !important
                height 1.5em !important
        p
            width 100%
            max-width none
