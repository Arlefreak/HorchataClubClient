.row
    text-align center
    display flex
    width 25%
    padding 0.625rem
    float left
    box-sizing border-box
    .card
        width 100%
        display flex
        flex-direction column
    img
        text-align center
        display block
        width 100%
    .horchata__img
        width 100%
        border-radius 10px 10px 0 0
        background-size cover
        background-position center center
        background-repeat no-repeat
    .horchata__body
        padding 15px
        text-align left
        display flex
        flex-direction column
        flex-grow 1
    h3
    .description
    .address
    .grade
        display flex
        width 100%
        margin 10px auto 10px
    h3
        width 100%
        height auto
    .description
    .address
        text-align left
        line-height 1.3em
        p
            margin 0 0 0 0
            max-width none
            width 90%
            text-align left
            font-weight 100
    .description
        flex-grow 1
        a
            color $color2
            font-weight 100
            display block
            margin 0px 0 10px 0
    .address
        border-top 1px solid
        padding 10px 0 0 0
        align-self flex-end
        margin auto 0 0 0
        a
            color $color2
            text-decoration none
            font-weight 100
            font-size 0.8em
    .grade
        text-align left
        display block
        margin 0 auto 10px auto
    @media screen and (max-width: 1024px)
        width 33.3%
    @media screen and (max-width: 800px)
        width 50%
    @media screen and (max-width: 640px)
        width 100%
