.center
    width 100%
    display block
h1
    font-size 1.0em
    color $color1
    letter-spacing 0.4em
    font-weight 400
    margin 20px auto 0 auto
    width 100%
    max-width 480px
    text-align center
    @media screen and (min-width: 640px)
        font-size 2.2em
h2
    font-size 3.0em
    font-weight 100
    margin 5vh auto 0 auto
p
    font-weight 400
    font-size 1.1em
    text-align left
    line-height 1.3em
    margin 20px auto 20px auto
    width 80%
    max-width 480px
    @media screen and (min-width: 640px)
        width 48%
        text-align justify
        font-weight 100
a
    color $color2
    text-decoration none
h3
    width 100%
    overflow hidden
    white-space nowrap
    font-weight 500 
    font-size 1.5em
    display inline-block
    text-align left
    margin 10px 0 10px 0
    @media screen and (max-width 600px)
        width 100%
        display block
        text-align left
.question
    text-align center
    font-style italic
.button
.buttonInv
    padding 10px 12px 10px 12px
    text-align center
    transition background 0.5s ease
    cursor pointer
.button
    border 2px solid $color2
    color $color2
    &:hover
    &.active
        background $color2
        color $color1
.buttonInv
    border 2px solid $color1
    color $color1
    &:hover
    &.active
        background $color1
        color $color2
.card
    background $white
    box-shadow 0 1px 2px #aaa
    border-radius 10px
