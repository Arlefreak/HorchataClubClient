header
    width 100%
    padding 0 0 20px 0
    margin 0 0 20px 0
    background $color2
    border-bottom 5px solid #ffa784
    overflow hidden
    img
        width 50%
        max-width 150px
        margin 20px auto 0 auto
        display block
    nav
        width 100%
        display block
        margin 15px 0 0 0
        ul
            padding 0
            margin 0
            list-style none
            text-align center
            li
                display inline-block
                a
                    color inherit
                    display inline-block
                    text-decoration none
                    min-width 100px
                    text-align center
                    margin 0 25px 0 25px
