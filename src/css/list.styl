.horchata
    display block
    margin 10px auto 20px auto
    width 48%
    max-width 480px
    @media screen and (max-width 600px)
        width 80%
        margin 10px auto 50px auto
    img
        text-align left
        display inline-block
        max-width 100px
        border-radius 50%
    h3
        width 65%
        font-weight 500 
        font-size 1.5em
        display inline-block
        text-align left
        margin 10px 0 10px 0
        @media screen and (max-width 600px)
            width 100%
            display block
            text-align left
    .grade
        text-align left
        display block
        margin 0 auto 10px auto
    .description
    .address
    .flag__body
        text-align left
        p
            margin 0 0 5px 0
            max-width none
            width 90%
            text-align left
            font-weight 100
    .description
        a
            color $color2
            font-weight 100
            display block
            margin 0px 0 10px 0
    .address        
        a
            color $color2
            text-decoration none
            font-weight 100
            font-size 0.8em
