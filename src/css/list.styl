.horchata
    display block
    margin 10px auto 20px auto
    width 48%
    max-width 480px
    background $white
    box-shadow 0 1px 2px #aaa
    border-radius 10px
    @media screen and (max-width 600px)
        width 80%
        margin 10px auto 50px auto
    img
        text-align center
        display block
        width 100%
    h3
        width 65%
        font-weight 500 
        font-size 1.5em
        display inline-block
        text-align left
        margin 10px 0 10px 0
        @media screen and (max-width 600px)
            width 100%
            display block
            text-align left
    .grade
        text-align left
        display block
        margin 0 auto 10px auto
    .horchata__body
        padding 15px
        text-align left
    .address
        margin 10px 0 0 0
        border-top 1px solid
        padding 10px 0 0 0
    .horchata__img
        min-height 350px
        border-radius 10px 10px 0 0
        background-size cover
        background-position center center
        background-repeat no-repeat
    .description
    .address
        text-align left
        p
            margin 0 0 0 0
            max-width none
            width 90%
            text-align left
            font-weight 100
    .description
        a
            color $color2
            font-weight 100
            display block
            margin 0px 0 10px 0
    .address        
        a
            color $color2
            text-decoration none
            font-weight 100
            font-size 0.8em
