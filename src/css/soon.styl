.soon
    width 100%
    height 100vh
    text-align center
    position relative
    .center
        width 100%
        display block
        @media screen and (min-width: 640px)
            transform translate(-50%, -50%)
            position absolute
            top 50%
            left 50%
    h1
        font-size 4.0em
        font-weight 500
        margin 20px auto 0 auto
        width 100%
        @media screen and (min-width: 640px)
            font-size 5.0em
            margin auto
    h2
        font-size 3.0em
        font-weight 100
        margin 5vh auto 0 auto
    p
        font-weight 100
        text-align justify
        margin 20px auto 20px auto
        width 80%
        @media screen and (min-width: 640px)
            width 48%
    .question
        text-align center
        font-style italic
    .button
        padding 10px 15px 10px 15px
        border 2px solid $color2
        text-align center
        transition background 0.5s ease
        &:hover
            background $color2
            color $color1
    .social
        margin 50px auto 50px auto
        padding 0
        list-style none
        clear both
        li
            display inline-block
            font-size 1.2em
            margin 0 10px 0 10px
            a
                color $color2

